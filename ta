-- UI Corner and Stroke
local function addUICorner(instance, radius)
    local uiCorner = Instance.new("UICorner", instance)
    uiCorner.CornerRadius = UDim.new(0, radius)
    return uiCorner
end

local function addUIStroke(instance, color)
    local stroke = Instance.new("UIStroke", instance)
    stroke.Color = color
    stroke.Thickness = 2
    return stroke
end
local function adjustForDevice()
    local isMobile = UserInputService.TouchEnabled
    
    if isMobile then
        -- Mobile Configuration
        MainFrame.Size = UDim2.new(0, 250, 0, 260) -- Smaller for mobile
        MainFrame.Position = UDim2.new(0.5, 0, 0.5, 0)
    else
        -- PC Configuration
        MainFrame.Size = UDim2.new(0, 400, 0, 500) -- Larger for PC
        MainFrame.Position = UDim2.new(0.5, 0, 0.5, 0)
    end
    
    MainFrame.AnchorPoint = Vector2.new(0.5, 0.5) -- Center alignment
end

-- Call the function to adjust initially
adjustForDevice()

-- Listen for screen size changes in case the player switches devices or resizes the window
RunService.Heartbeat:Connect(adjustForDevice)


-- Rainbow Background Tween
local function createRainbowEffect(guiElement)
    local colorIndex = 0
    RunService.RenderStepped:Connect(function()
        colorIndex = colorIndex + 1
        guiElement.BackgroundColor3 = Color3.fromHSV((colorIndex % 360) / 360, 1, 1)
    end)
end

